{
  "intro": [
    "Clerk is a platform that helps find the",
    "right fit for a company."
  ],

  "switch": {
    "headline": "Do you want to create an account?",
    "options": [
      {
        "text": "Applicant",
        "shift": {
          "push": "signUpAsApplicant email",
          "pull": "switch"
        }
      }, {
        "text": "Company",
        "shift": {
          "push": "signUpAsCompany email",
          "pull": "switch"
        }
      }
    ],
    "note": [
      "Already have an account?",
      "Try to <a class='link router shift' href='#' data-push='signIn' data-pull='switch' title='sign in'>sign in</a> instead."
    ]
  },

  "signIn": {
    "headline": "Sign in to Clerk",
    "note": [
      "Puts the right person in the",
      "right position"
    ],
    "fields": [
      {
        "type": "email",
        "name": "email",
        "placeholder": "Email address"
      }, {
        "type": "password",
        "name": "password",
        "placeholder": "Password"
      }
    ],
    "action": {
      "text": "Sign in",
      "function": "Auth.signIn()"
    },
    "link": {
      "text": "Forgot password?",
      "shift": {
        "push": "forgot",
        "pull": "signIn"
      }
    }
  },

  "signUpAsApplicant": {
    "email": {
      "headline": "Sign up to Clerk",
      "note": [
        "Puts the right person in the",
        "right position"
      ],
      "fields": [
        {
          "type": "fields-group",
          "inputs": [
            {
              "type": "text",
              "name": "firstName",
              "placeholder": "First name"
            }, {
              "type": "text",
              "name": "lastName",
              "placeholder": "Last name"
            }
          ]
        }, {
          "type": "email",
          "name": "email",
          "placeholder": "Email address"
        }
      ],
      "action": {
        "text": "Continue",
        "shift": {
          "push": "password",
          "pull": "email"
        }
      }
    },
    "password": {
      "headline": "Set a password",
      "note": [
        "Type something hard to guess",
        "but you can remember"
      ],
      "fields": [
        {
          "type": "password",
          "name": "password",
          "placeholder": "Password"
        }, {
          "type": "password",
          "name": "confirmPassword",
          "placeholder": "Confirm password"
        }
      ],
      "action": {
        "text": "Sign up",
        "function": "Auth.signUpAsApplicant()"
      }
    }
  },

  "signUpAsCompany": {
    "email": {
      "headline": "Sign up to Clerk",
      "note": [
        "Puts the right person in the",
        "right position"
      ],
      "fields": [
        {
          "type": "text",
          "name": "companyName",
          "placeholder": "Company's name"
        }, {
          "type": "email",
          "name": "email",
          "placeholder": "Email address"
        }
      ],
      "action": {
        "text": "Continue",
        "shift": {
          "push": "password",
          "pull": "email"
        }
      }
    },
    "password": {
      "headline": "Set a password",
      "note": [
        "Type something hard to guess",
        "but you can remember"
      ],
      "fields": [
        {
          "type": "password",
          "name": "password",
          "placeholder": "Password"
        }, {
          "type": "password",
          "name": "confirmPassword",
          "placeholder": "Confirm password"
        }
      ],
      "action": {
        "text": "Sign up",
        "function": "Auth.signUpAsCompany()"
      }
    }
  },

  "forgot": {
    "headline": "Forgot password",
    "note": [
      "We'll send a security code to",
      "your email address"
    ],
    "fields": [{
      "type": "email",
      "name": "email",
      "placeholder": "Email address"
    }],
    "action": {
      "text": "Send code",
      "function": "Auth.forgot()"
    },
    "link": {
      "text": "Cancel",
      "shift": {
        "push": "signIn",
        "pull": "forgot"
      }
    }
  },

  "securityCode": {
    "headline": "Confirm identity",
    "note": [
      "Enter the security code below",
      "to reset your password"
    ],
    "fields": [{
      "type": "text",
      "name": "securityCode",
      "placeholder": "Security code"
    }],
    "action": {
      "text": "Confirm",
      "function": "Auth.securityCode()"
    },
    "link": {
      "text": "Cancel",
      "shift": {
        "push": "signIn",
        "pull": "securityCode"
      }
    }
  },

  "reset": {
    "headline": "Reset password",
    "note": [
      "Type something hard to guess",
      "but you can remember"
    ],
    "fields": [
      {
        "type": "password",
        "name": "password",
        "placeholder": "Your new password"
      }, {
        "type": "password",
        "name": "confirmPassword",
        "placeholder": "Your password again"
      }
    ],
    "action": {
      "text": "Reset",
      "function": "Auth.reset()"
    }
  }
}
