{
  "intro": [
    "Clerk is a platform that helps find the",
    "right fit for a company."
  ],

  "switch": {
    "headline": "Do you want to create an account?",
    "options": [
      {
        "text": "Applicant",
        "push": "signUpAsApplicant",
        "pull": "switch"
      }, {
        "text": "Company",
        "push": "signUpAsCompany",
        "pull": "switch"
      }
    ],
    "note": [
      "Already have an account?",
      "Try to <a href='#' class='link router push' title='sign in' data-push='signIn' data-pull='switch'>sign in</a> instead."
    ]
  },

  "signIn": {
    "request": "signIn",
    "headline": "Sign in to Clerk",
    "note": [
      "Puts the right person in the",
      "right position"
    ],
    "fields": [
      {
        "type": "email",
        "name": "email",
        "placeholder": "Email address"
      }, {
        "type": "password",
        "name": "password",
        "placeholder": "Password"
      }
    ],
    "action": {
      "text": "Sign in",
      "request": "signIn"
    },
    "link": {
      "text": "Forgot password?",
      "push": "forgot",
      "pull": "signIn"
    }
  },

  "signUpAsApplicant": {
    "request": "signUpAsApplicant",
    "email": {
      "headline": "Sign up to Clerk",
      "note": [
        "Puts the right person in the",
        "right position"
      ],
      "fields": [
        {
          "type": "fields-group",
          "fields": [
            {
              "type": "text",
              "name": "firstName",
              "placeholder": "First name"
            }, {
              "type": "text",
              "name": "lastName",
              "placeholder": "Last name"
            }
          ]
        }, {
          "type": "email",
          "name": "email",
          "placeholder": "Email address"
        }
      ],
      "action": {
        "text": "Continue",
        "push": "password",
        "pull": "email"
      }
    },
    "password": {
      "headline": "Set a password",
      "note": [
        "Type something hard to guess",
        "but you can remember"
      ],
      "fields": [
        {
          "type": "password",
          "name": "password",
          "placeholder": "Password"
        }, {
          "type": "password",
          "name": "confirmPassword",
          "placeholder": "Confirm password"
        }
      ],
      "action": {
        "text": "Sign up",
        "request": "signUpAsApplicant"
      }
    }
  }
}
