{
  "intro": [
    "Clerk is a platform that helps find the",
    "right fit for a company."
  ],

  "switch": {
    "headline": "Do you want to create an account?",
    "options": [
      {
        "text": "Applicant",
        "location": "auth/applicant"
      }, {
        "text": "Company",
        "location": "auth/company"
      }
    ],
    "note": [
      "Already have an account?",
      "Try to <a href='#auth' class='link router' title='sign in'>sign in</a> instead."
    ]
  },

  "signIn": {
    "request": "signIn",
    "headline": "Sign in to Clerk",
    "note": [
      "Puts the right person in the",
      "right position"
    ],
    "fields": [
      {
        "type": "email",
        "name": "email",
        "placeholder": "Email address"
      }, {
        "type": "password",
        "name": "password",
        "placeholder": "Password"
      }
    ],
    "action": {
      "text": "Sign in",
      "request": "signIn"
    },
    "link": {
      "text": "Forgot password?",
      "location": "auth/forgot"
    }
  }
}
