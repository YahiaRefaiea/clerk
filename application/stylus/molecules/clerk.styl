clerk-width= 66px
clerk-margin= baseline*1.5
clerkPathLength= 142px, 128px, 114px, 98px, 84px
clerkPathLengthFull= 168px

clerkMargin(container)
  margin-top: -(container/2) + clerk-width + clerk-margin

//  CLERK
#clerk
  makeAbsolute: 50% 50%
  width: clerk-width
  height: clerk-width
  margin-top: -(pageHeight/2)
  margin-{align}: -(clerk-width/2)
  hasTransition: durationAlt
  background-color: red
  .symbol,
  .symbol circle
    transition: all durationAlt ease
    animation: none

// .waiting #clerk
//   margin-{align}: -(nucubuc-origin/2)
@media (min-width: delta)
  body:not(.page) #clerk,
  .auth #clerk
    {align}: 50% + ((100% - containerWidth)/2)
