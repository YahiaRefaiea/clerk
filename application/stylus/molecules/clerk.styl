//  SYMBOL
#clerk .symbol
  width: clerk-width
  height: clerk-width
  fill: none
  stroke: blue
  stroke-linecap: round
  stroke-width: 12
  transform: rotate(30deg)
.waiting #clerk .symbol
  animation: rotate durationAlt ease infinite
  @keyframes rotate
    100%
      transform: rotate(389deg)

//  CIRCLE
#clerk .symbol circle
  opacity: .35
  &:nth-child(5)
    opacity: 1
  for i in 1..5
    &:nth-child({i})
      stroke-dasharray: clerkPathLength[i - 1]
      stroke-dashoffset: -((clerkPathLength[0] - clerkPathLength[i - 1]) /2)
.waiting #clerk .symbol circle
  opacity: 0
  stroke-dasharray: clerkPathLengthFull
  stroke-dashoffset: clerkPathLengthFull
  &:nth-child(5)
    opacity: 1
    animation: dashoffset durationAlt ease infinite
    @keyframes dashoffset
      49.5%, 50.5%
        stroke-dashoffset: 0
      100%
        stroke-dashoffset: -(clerkPathLengthFull)
