.spans
  white-space: nowrap
.spans > span
  display: inline-block
  opacity: 0
  transform: translateY(baseline)
  hasTransition()
  cursor: default
  &:not(:last-child)
    margin-{align-alt}: 3px
.current .spans
  > span
    z-index: 1
    opacity: 1
    transform: translateY(0) !important
    multiTransition: 1 15 duration step
    cursor: auto
  for i in 2..4
    &:nth-child({i}) > span
      multiTransition: 1 15 duration step*i

.headline.spans > span
  transform: translateY(headline-height)
  &:not(:last-child)
    margin-{align-alt}: 8px

.h1.spans > span
  transform: translateY(heading1-height)
  &:not(:last-child)
    margin-{align-alt}: 6px

.h2, .h3
  &.spans > span:not(:last-child)
    margin-{align-alt}: 4px

.h2.spans > span
  transform: translateY(heading2-height)
