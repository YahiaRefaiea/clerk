  .tablet-ten.columns
    width: 82.6666666667%
  .tablet-eleven.columns
    width: 91.3333333333%
  .tablet-twelve.columns
    width: 100%
    margin-{align}: 0

  .tablet-one-third.column
    width: 30.6666666667%
  .tablet-two-thirds.column
    width: 65.3333333333%

  .tablet-one-half.column
    width: 48%

