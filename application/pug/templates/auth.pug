#auth
  
  //- BACKGROUND
  .background
  
  //- INTRO
  #intro: .h3
    each line in auth.intro
      .spans= line
  
  //- SWITCH
  #switch
    .h3
      each line in auth.switch.headline
        .spans= line
    ul.fields.blocks.inline.halves
      each option in auth.switch.options
        li: a.button.router(href='#' + option.location title=option.text)= option.text
    .note
      each line in auth.switch.note
        .small !{line}
