//- FIELD
mixin field(name, placeholder, id=false, type='text')
  .field
    if type == 'textarea'
      textarea(id=id name=name placeholder=placeholder)
    else
      input(id=id type=type name=name placeholder=placeholder)
    .effect

//- FIELD LABELED
mixin fieldLabeled(name, label, id=name, type='text')
  .field.labeled(class!=attributes.class)
    label(for=id)= label
    if type == 'textarea'
      textarea(id=id name=name)
    else
      input(id=id type=type name=name)
    .effect
